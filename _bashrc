#!/usr/bin/env bash

export PATH="$PATH:/usr/local/sbin:/usr/sbin:/sbin"

# If not running interactively, don't do anything
[[ -z $PS1 ]] && return

# check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize

# No history file for less(1)
export LESSHISTFILE=-
export PAGER=less
export EDITOR=vim
export BROWSER=firefox
export PS1="\[\e[34m\]\u\[\e[m\]\[\e[32m\]@\[\e[m\]\[\e[34m\]\h\[\e[m\] \[\e[32m\]\w\[\e[m\] \[\e[34m\]%\[\e[m\] "
export GOPATH=$HOME/goprojects
export PATH=$PATH:$GOPATH/bin

# No history file for bash(1)
unset HISTFILE

[[ -f ~/.bash_aliases ]] && source ~/.bash_aliases
[[ -f ~/.bash_local ]] && source ~/.bash_local

# Enable the bash completion library
[[ -f /usr/local/share/bash-completion/bash_completion.sh ]] && \
	source /usr/local/share/bash-completion/bash_completion.sh
